
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login Form</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-md">
        <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Login Your Account</h2>
        <form action="/login" method="post" class="space-y-4" onsubmit="return validateForm()">
          

            <div>
                <label for="email" class="block text-sm font-medium text-gray-600">Email</label>
                <input type="email" id="email" name="email" placeholder="Enter your email" 
                       class="w-full px-4 py-2 border rounded-lg focus:ring focus:ring-indigo-200 focus:outline-none" required>
            </div>
            <div>
                <label for="password" class="block text-sm font-medium text-gray-600">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" 
                       class="w-full px-4 py-2 border rounded-lg focus:ring focus:ring-indigo-200 focus:outline-none" required>
            </div>
         
            <div>
                <input type="submit" value="Login Account" 
                       class="w-full bg-indigo-600 text-white py-2 px-4 rounded-lg hover:bg-indigo-700 transition-colors">
            </div>
        </form>
        <!-- <form action="/"></form> -->
    </div>

    <script>
        function validateForm() {
            const formElements = document.querySelectorAll('input[required]');
            for (const element of formElements) {
                if (!element.value.trim()) {
                    alert(`Please fill out the ${element.placeholder}`);
                    element.focus();
                    return false;
                }
            }
            return true;
        }
    </script>
</body>
</html>
