<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800 min-h-screen flex flex-col items-center p-4">
    <header class="w-full max-w-3xl flex justify-between items-center py-4 px-6 bg-white shadow-md rounded-lg mb-6">
        <h1 class="text-2xl font-bold">Profile</h1>
        <a href="/logout" class="text-white bg-red-500 px-4 py-2 rounded-lg hover:bg-red-600 transition duration-200">Logout</a>
    </header>

    <main class="w-full max-w-3xl bg-white shadow-md rounded-lg p-6 space-y-6">
        <div>
            <h2 class="text-xl font-semibold mb-2">Hello, <span class="text-indigo-600 font-bold"><%= user.name %></span> ðŸ˜Š</h2>
            <p class="text-gray-600">You can create a new post below:</p>
        </div>

        <!-- Create Post Form -->
        <form action="/create-post" method="post" class="space-y-4">
            <textarea 
                name="content" 
                placeholder="What's on your mind?" 
                rows="4" 
                class="w-full px-4 py-2 border rounded-lg focus:ring focus:ring-indigo-200 focus:outline-none resize-none"
                required></textarea>
            <button 
                type="submit" 
                class="w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 transition duration-200">
                Create a New Post
            </button>
        </form>

        <!-- Your Posts Section -->
        <section>
            <h3 class="text-lg font-semibold mb-4">Your Posts</h3>
            <div class="space-y-6">
                <% user.posts.forEach(function(post) { %>
                    <div class="bg-gray-50 p-4 rounded-lg shadow">
                        <div class="flex items-center justify-between mb-2">
                            <h4 class="text-sm font-medium text-gray-700">@<%= user.username %></h4>
                            <p class="text-gray-600 text-sm"><%= new Date(post.createdAt).toLocaleDateString() %></p>
                        </div>
                        <p class="text-gray-700 mb-2">
                            <%= post.content %>
                        </p>
                        <div class="flex gap-4">
                            <!-- Likes/Unlike Link -->
                            <a href="/like/<%= post._id %>" class="text-blue-500">
                                <% if (post.likes.includes(user._id)) { %>
                                    Unlike
                                <% } else { %>
                                    Like
                                <% } %>
                            </a>
                            <!-- Edit Link -->
                            <!-- <a href="/edit/<%= post._id %>" class="text-zinc-600">Edit</a> -->
                            <small class="text-gray-500"><%= post.likes.length %> likes</small>
                        </div>
                    </div>
                <% }); %>
            </div>
        </section>
    </main>
</body>
</html>
